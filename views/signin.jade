extends layout 

block content

    .main.container.row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Sign in

            form(action='/auth/signin', method='post')
                .form-group 
                    label Email: 
                        input.form-control(type='text', placeholder='johndoe@example.com' name='email')
                br
                .form-group
                    label Password: 
                        input.form-control(type='text', name='password')
                br      
                button.btn.btn-primary(type='submit') Submit